{% extends "Admin/session/layout.njk" %}
{% block content %}
<div class="session_content">
    <div class="session_form">
        <form action="/admin/users/login" method="POST">
            <div class="session_header">
                <p>Iniciar Sess√£o</p>
            </div>
            <div class="fields">
                <div class="item">
                    <p>Email</p>
                    <div>
                        <input type="text" name="email" value="{{user.email}}" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')" ></div>
                    </div>
                    <div class="item">
                        <p>Senha</p>
                        <div>
                            <input type="password" name="password" value="{{user.password}}" placeholder="Digite sua senha"></div>
                        </div>
                    </div>
                    <div class="session_buttons">
                        <a href="/">Perdeu a conta?</a>
                        <button type="submit">Acessar</button>
                    </div>
                </form>
            </div>
        </div>
{% endblock%}